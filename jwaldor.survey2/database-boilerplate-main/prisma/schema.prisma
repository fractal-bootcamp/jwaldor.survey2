generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id     String  @id @default(cuid())
  title  String
  Blocks Block[]
}

model Question {
  id        String      @id @default(cuid())
  text      String
  ordering  Int
  blockId   String
  block     Block       @relation(fields: [blockId], references: [id])
  Responses Responses[]
}

model Responses {
  id          String   @id @default(cuid())
  text        String
  question_id String
  question    Question @relation(fields: [question_id], references: [id],onDelete:SetNull)
}

model Block {
  id       String     @id @default(cuid())
  ordering Int
  surveyId String
  survey   Survey     @relation(fields: [surveyId], references: [id])
  Question Question[]
}
